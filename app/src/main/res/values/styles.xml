<resources>
<!-- Base application theme. -->
<style xmlns:tools="http://schemas.android.com/tools"
    name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#f47906</item>
    <item name="colorPrimaryDark">#f47906</item>
    <item name="colorAccent">#f47906</item>
    <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
</style>

<style name="AppTheme.Transparent" parent="AppTheme">
<item name="android:windowIsTranslucent">true</item>
    <item name="colorPrimary">#f47906</item>
    <item name="colorPrimaryDark">#f47906</item>
    <item name="colorAccent">#f47906</item>
<item name="android:windowBackground">@android:color/transparent</item>
<item name="android:windowDrawsSystemBarBackgrounds">true</item>

</style>
</resources>